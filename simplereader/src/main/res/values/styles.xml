<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Light" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/default_window_bg</item>
        <item name="android:listSelector">?clickableBackground</item>
        <!--<item name="clickableBackground">@drawable/clickable_background</item>-->
        <item name="font_color">@color/ssxinheihui1</item>
        <item name="main_bg">@color/white</item>
        <item name="font_color2">@color/ssxinzi3</item>
        <item name="divider_black">@color/write_comment_divider_color</item>
        <item name="divider_light_grey">@color/ssxinxian1</item>
        <item name="font_red">@color/subscribe_category_btn_bg_normal</item>
        <item name="white_bg">@color/white</item>
        <item name="windowNoTitle">?android:windowNoTitle</item>
    </style>

    <style name="Theme.Night" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/default_window_bg_night</item>
        <item name="android:listSelector">?clickableBackground</item>
        <!--<item name="clickableBackground">@drawable/clickable_background_night</item>-->
        <item name="font_color">@color/ssxinheihui10_press</item>
        <item name="main_bg">@color/ss_menu_text</item>
        <item name="divider_black">@color/default_window_bg_night</item>
        <item name="font_color2">@color/ssxinheihui10_press</item>
        <item name="divider_light_grey">@color/ssxinheihui10_press</item>
        <item name="font_red">@color/subscribe_category_btn_bg_pressed</item>
        <item name="white_bg">@color/subscribe_category_bar_bg_night</item>
        <item name="windowNoTitle">?android:windowNoTitle</item>
    </style>

    <style name="tab_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabBackground">@color/tab_background</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">#ff7a61</item>
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="RecycleViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="new_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/new_title</item>
    </style>

</resources>
